rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin email constant
    function isAdmin(email) {
      return email == 'thekindbridge@gmail.com';
    }

    // Check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Get user email
    function getUserEmail() {
      return request.auth.token.email;
    }

    // Get user UID
    function getUserUid() {
      return request.auth.uid;
    }

    // Rules for serviceRequests collection
    match /serviceRequests/{requestId} {
      function isAdminStatus(status) {
        return status in ['pending', 'in_progress', 'completed', 'rejected'];
      }

      // Allow authenticated users to read only their own requests
      allow read: if isAuth() && (
        resource.data.userId == getUserUid() || 
        isAdmin(getUserEmail())
      );

      // Allow creating a new request (write own document)
      allow create: if isAuth() && 
        request.resource.data.id == requestId &&
        request.resource.data.userId == getUserUid() &&
        request.resource.data.status == 'submitted';

      // Admin can update status; users can only cancel their own requests
      allow update: if isAuth() && (
        (
          isAdmin(getUserEmail()) &&
          request.resource.data.id == resource.data.id &&
          request.resource.data.userId == resource.data.userId &&
          request.resource.data.formData == resource.data.formData &&
          request.resource.data.createdAt == resource.data.createdAt &&
          resource.data.status != 'cancelled' &&
          isAdminStatus(request.resource.data.status)
        ) ||
        (
          request.resource.data.id == resource.data.id &&
          request.resource.data.userId == getUserUid() &&
          request.resource.data.formData == resource.data.formData &&
          request.resource.data.createdAt == resource.data.createdAt &&
          resource.data.status == 'submitted' &&
          request.resource.data.status == 'cancelled'
        )
      );

      // Only admin can delete
      allow delete: if isAuth() && isAdmin(getUserEmail());
    }

    // Rules for userProfiles collection
    match /userProfiles/{userId} {
      // Users can read and write their own profile
      allow read, write: if isAuth() && userId == getUserUid();
    }
  }
}
